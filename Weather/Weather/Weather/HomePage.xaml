    </NavigationPage.TitleView>

    <ContentPage.Content>



        <Grid VerticalOptions="CenterAndExpand"
                         Padding="20">

            <Grid.RowDefinitions>
                <RowDefinition Height="3.3*" />
                <RowDefinition Height="3.3*" />
                <RowDefinition Height="3.3*" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="180*" />
            </Grid.ColumnDefinitions>

            <StackLayout HeightRequest="100" VerticalOptions="Start" HorizontalOptions="FillAndExpand" Spacing="20" Grid.Row="0">

                <Label Text="Here you" 
                       TextColor="White"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       FontSize="Large" />

                <Label Text="can place your own" 
                       TextColor="White"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       FontSize="Large" />

                <Label Text="awesome image!" 
                       TextColor="White"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       FontSize="Large" 
                       FontAttributes="Bold"/>

            </StackLayout>

            <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Grid.Row="1">
                <Frame CornerRadius="9" BackgroundColor="#e6e6e6" >
                    <StackLayout Orientation="Vertical"
                             HorizontalOptions="CenterAndExpand"
                             VerticalOptions="CenterAndExpand">

                        <Image Source="ic_cloud"
                           VerticalOptions="CenterAndExpand"
                           HeightRequest="75"
                           WidthRequest="75"/>

                        <Label Text="Weather" 
                           TextColor="#444337"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           FontSize="Medium" 
                           FontAttributes="Bold"/>

                    </StackLayout>
                </Frame>

                <Frame CornerRadius="9" BackgroundColor="#e6e6e6" >
                    <StackLayout Orientation="Vertical"
                             HorizontalOptions="CenterAndExpand"
                             VerticalOptions="CenterAndExpand">

                        <Image Source="ic_location_on"
                           VerticalOptions="CenterAndExpand"
                           HeightRequest="75"
                           WidthRequest="75"/>

                        <Label Text="Locations" 
                           TextColor="#444337"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           FontSize="Medium"
                           FontAttributes="Bold"/>

                    </StackLayout>
                </Frame>

            </StackLayout>
            
            <!--   -->
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Grid.Row="2">
                <Frame CornerRadius="9" BackgroundColor="#e6e6e6" >
                    <StackLayout Orientation="Vertical"
                             HorizontalOptions="CenterAndExpand"
                             VerticalOptions="CenterAndExpand">

                        <Image Source="ic_people"
                           VerticalOptions="CenterAndExpand"
                           HeightRequest="75"
                           WidthRequest="75"/>

                        <Label Text="Crew" 
                           TextColor="#444337"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           FontSize="Medium" 
                           FontAttributes="Bold"/>

                    </StackLayout>
                </Frame>

                <Frame CornerRadius="9" BackgroundColor="#e6e6e6" >
                    <StackLayout Orientation="Vertical"
                             HorizontalOptions="CenterAndExpand"
                             VerticalOptions="CenterAndExpand">

                        <Image Source="ic_radio"
                           VerticalOptions="CenterAndExpand"
                           HeightRequest="75"
                           WidthRequest="75"/>

                        <Label Text="Radio" 
                           TextColor="#444337"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           FontSize="Medium"
                           FontAttributes="Bold"/>

                    </StackLayout>
                </Frame>
            </StackLayout>
            
        </Grid>

    </ContentPage.Content>

</ContentPage>